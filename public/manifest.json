{
  "manifest_version": 2,
  "name": "N Yobi-char-counter",
  "version": "0.1.0",
  "description": "文字数カウンターをアップデートしてみました。",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.nnn.ed.nico/contents/courses/*/chapters/*/*/*"
      ],
      "run_at": "document_idle",
      "js": [
        "contentScript.js"
      ],
			"all_frames": true
    }
  ]
}