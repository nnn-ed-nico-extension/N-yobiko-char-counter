{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "homepage_url": "https://github.com/tsutoringo/N-yobiko-char-counter",
  "description": "_MSG_extDesc",
  "default_locale": "ja",
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_extName__",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.nnn.ed.nico/contents/courses/*/chapters/*/*/*"
      ],
      "run_at": "document_idle",
      "js": [
        "js/content-script.js"
      ],
			"all_frames": true
    }
  ]
}
